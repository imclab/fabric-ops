#!upstart
description "%(description)s"

start on started networking
stop on shutdown

setuid %(name)s

script
        /bin/bash << EOT
        . /home/%(user)s/.nvm/nvm.sh
        cd %(appdir)s
        NODE_ENV=production NODE_PATH="%(appdir)s" node server 2>&1  >> %(logdir)s/%(logfile)s
        EOT
end script

post-start script
    PID=`status %(name)s | cut -d" " -f4`
    echo $PID > %(piddir)s/%(pidfile)s
end script

post-stop script
    rm -f %(piddir)s/%(pidfile)s
end script
